# Server Configuration
PORT=3001
NODE_ENV=development
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ai-detection-agent
REDIS_URL=redis://localhost:6379
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# AI/LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
LANGCHAIN_API_KEY=your_langchain_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Data Source API Keys
EDR_API_KEY=your_edr_api_key_here
SIEM_API_KEY=your_siem_api_key_here
CLOUD_API_KEY=your_cloud_api_key_here
FRAUD_API_KEY=your_fraud_api_key_here
APM_API_KEY=your_apm_api_key_here

# Security Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# WebSocket Configuration
WS_PORT=3002
WS_CORS_ORIGIN=http://localhost:5173

# External Services
THREAT_INTEL_API_URL=https://api.threatintel.example.com
MITRE_ATTACK_API_URL=https://api.mitre.org
